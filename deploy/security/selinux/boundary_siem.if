## <summary>SELinux Policy Interface for Boundary SIEM</summary>

########################################
## <summary>
##	Execute boundary_siem in the boundary_siem domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed to transition.
##	</summary>
## </param>
#
interface(`boundary_siem_domtrans',`
	gen_require(`
		type boundary_siem_t, boundary_siem_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, boundary_siem_exec_t, boundary_siem_t)
')

########################################
## <summary>
##	Execute boundary_siem in the caller domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`boundary_siem_exec',`
	gen_require(`
		type boundary_siem_exec_t;
	')

	corecmd_search_bin($1)
	can_exec($1, boundary_siem_exec_t)
')

########################################
## <summary>
##	Read boundary_siem configuration files.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`boundary_siem_read_conf',`
	gen_require(`
		type boundary_siem_conf_t;
	')

	files_search_etc($1)
	read_files_pattern($1, boundary_siem_conf_t, boundary_siem_conf_t)
')

########################################
## <summary>
##	Read boundary_siem log files.
## </summary>
