########################################
## <summary>
##	Manage boundary_siem log files.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`boundary_siem_manage_log',`
	gen_require(`
		type boundary_siem_log_t;
	')

	logging_search_logs($1)
	manage_files_pattern($1, boundary_siem_log_t, boundary_siem_log_t)
	manage_dirs_pattern($1, boundary_siem_log_t, boundary_siem_log_t)
